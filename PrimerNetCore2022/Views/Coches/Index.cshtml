@model ICoche
 
<h1>Ejemplo DI</h1>

<h2 style="color:blue">
    Marca: @Model.Marca, Modelo: @Model.Modelo
</h2>

<img src="~/images/@Model.Imagen" style="width: 250px; height: 250px"/>

<h2 style="color:red">
    Velocidad actual: @Model.Velocidad
</h2>
<h2 style="color:green">
    Velocidad máxima: @Model.VelocidadMaxima
</h2>
<form method="post">
    <button name="accion" value="acelerar" class="btn btn-warning">
        Acelerar
    </button>
    <button name="accion" value="frenar" class="btn btn-danger">
        Frenar
    </button>
</form>

